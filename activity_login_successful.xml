<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include
        layout="@layout/app_bar_login_successful"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_login_successful"
        app:menu="@menu/activity_login_successful_drawer" >

        <TextView
            android:id="@+id/welcomeTextView"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:textSize="14sp" />
    </android.support.design.widget.NavigationView>

    <GridLayout
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/clothButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="@drawable/dress"
            android:text="Button" />

        <Button
            android:id="@+id/shoeButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="Button"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:background="@drawable/shoe"
            android:layout_rowWeight="1"/>
        <Button
            android:id="@+id/handbagButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="Handbag"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/handbag"/>
        <Button
            android:id="@+id/accessoriesButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="Accesories"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/jewellery"/>
        <Button
            android:id="@+id/watchesButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="Watches"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/watch"/>
        <Button
            android:id="@+id/sunglassesButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="Sunglasses"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/sunglasses"/>
    </GridLayout>
</android.support.v4.widget.DrawerLayout>
